// Functions to control motor direction
void forward(){
  //Forward
  //Motor A
  digitalWrite(6, HIGH);
  digitalWrite(5, LOW);
  //Motor B
  digitalWrite(8, LOW);
  digitalWrite(7, HIGH);
}
void reverse(){
  //Reverse
  //Motor A
  digitalWrite(6, LOW);
  digitalWrite(5, HIGH);
  //Motor B
  digitalWrite(8, HIGH);
  digitalWrite(7, LOW);
}
void left(){
  //Spin Left
  //Motor A forwards
  digitalWrite(6, LOW);
  digitalWrite(5, HIGH);
  //Motor B backwards
  digitalWrite(8, LOW);
  digitalWrite(7, HIGH);    
}
void right(){
  //Spin Right
  //Motor A backwards
  digitalWrite(6, HIGH);
  digitalWrite(5, LOW);
  //Motor B forwards
  digitalWrite(8, HIGH);
  digitalWrite(7, LOW);
}
void stop(){
  //All motors off
  //Motor A stop
  digitalWrite(6, LOW);
  digitalWrite(5, LOW);
  //Motor B stop
  digitalWrite(8, LOW);
  digitalWrite(7, LOW);  
}

